<% provide(:button_text, 'Create Book') %>

<div class='container px-5 px-sm-0'>
  <%#= render 'layouts/error_messages', errors: @book.errors %>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/user_info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/book_form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
      <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", class: 'attachment user profile_image fallback' %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
      <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
